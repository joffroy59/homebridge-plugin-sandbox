{
  "pluginAlias": "SandboxHomebridgePlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Patform Name",
        "type": "string",
        "required": true,
        "default": "Sandbox Value"
      },
      "options": {
        "type": "object",
        "properties": {
          "devices": {
            "title": "Devices",
            "type": "array",
            "description": "The Devices",
            "items": {
              "title": "Device",
              "type": "object",
              "properties": {
                "configDeviceName": {
                  "title": "Device Name",
                  "type": "string",
                  "required": true,
                  "examples": [
                    "Standing Device"
                  ]
                },
                "uniqueId": {
                  "title": "uniqueId",
                  "type": "string",
                  "required": true,
                  "examples": [
                    "ABCD"
                  ]
                },
                "updateInterval": {
                  "title": "Interval in which the state of the Accessory should be updated (in seconds)",
                  "type": "number",
                  "default": "10",
                  "required": false
                },
                "motionSensorName1": {
                  "title": "Motion Sensor Name",
                  "type": "string",
                  "required": true,
                  "default": "Sandbox Motion Sensor One Name"
                },
                "motionSensorIdentifier1": {
                  "title": "Motion Sensor Identifier",
                  "type": "string",
                  "required": true,
                  "default": "Sandbox YourUniqueIdentifier-1"
                },
                "motionSensorName2": {
                  "title": "Motion Sensor Name",
                  "type": "string",
                  "required": true,
                  "default": "Sandbox Motion Sensor Two Name"
                },
                "motionSensorIdentifier2": {
                  "title": "Motion Sensor Identifier",
                  "type": "string",
                  "required": true,
                  "default": "Sandbox YourUniqueIdentifier-2"
                },
                "temperatureSensorName1": {
                  "title": "Temperature Sensor Name",
                  "type": "string",
                  "required": true,
                  "default": "Sandbox Temperature Sensor One Name"
                },
                "temperatureSensorIdentifier1": {
                  "title": "Temperature Sensor Identifier",
                  "type": "string",
                  "required": true,
                  "default": "Sandbox YourUniqueIdentifier-1"
                }
              }
            }
          },
          "serialNumber": {
            "title": "Serial Number",
            "type": "string",
            "required": true,
            "default": "Default-Serial"
          },
          "manufacturer": {
            "title": "Manufacturer",
            "type": "string",
            "required": true,
            "default": "Default-Manufacturer"
          },
          "model": {
            "title": "Model",
            "type": "string",
            "required": true,
            "default": "Default-Model"
          }
        }
      }
    }
  }
}