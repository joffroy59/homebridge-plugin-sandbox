{
  "pluginAlias": "SandboxHomebridgePlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Patform Name",
        "type": "string",
        "required": true,
        "default": "Sandbox Value"
      },
      "options": {
        "type": "object",
        "properties": {
          "devices": {
            "title": "Devices",
            "type": "array",
            "description": "The Devices",
            "items": {
              "title": "Device",
              "type": "object",
              "properties": {
                "configDeviceName": {
                  "title": "Device Name",
                  "type": "string",
                  "required": true,
                  "examples": [
                    "Standing Device"
                  ]
                },
                "uniqueId": {
                  "title": "uniqueId",
                  "type": "string",
                  "required": true,
                  "examples": [
                    "ABCD"
                  ]
                },
                "updateInterval": {
                  "title": "Interval in which the state of the Accessory should be updated (in seconds)",
                  "type": "number",
                  "default": "10",
                  "required": false
                },
                "lightBulb": {
                  "type": "object",
                  "properties": {
                    "disableLightBulb": {
                      "title": "Disable LightBulb",
                      "type": "boolean",
                      "default": false,
                      "required": true
                    }
                  }
                },
                "temperatureSensor": {
                  "type": "object",
                  "properties": {
                    "temperatureSensorUpdateInterval": {
                      "title": "Interval in which the state of the Temperature Service should be updated (in seconds)",
                      "type": "number",
                      "default": "300",
                      "required": false
                    },
                    "temperatureSensorName1": {
                      "title": "Temperature Sensor Name",
                      "type": "string",
                      "required": true,
                      "default": "Sandbox Temperature Sensor One Name"
                    },
                    "temperatureSensorIdentifier1": {
                      "title": "Temperature Sensor Identifier",
                      "type": "string",
                      "required": true,
                      "default": "Sandbox-Sensor-Temperature-YourUniqueIdentifier-1"
                    }
                  }
                },
                "motionSensorUpdateInterval": {
                  "title": "Interval in which the state of the Motion Service should be updated (in seconds)",
                  "type": "number",
                  "default": "300",
                  "required": false
                },
                "motionSensorName1": {
                  "title": "Motion Sensor Name",
                  "type": "string",
                  "required": true,
                  "default": "Sandbox Motion Sensor One Name"
                },
                "motionSensorIdentifier1": {
                  "title": "Motion Sensor Identifier",
                  "type": "string",
                  "required": true,
                  "default": "Sandbox-Sensor-Motion-YourUniqueIdentifier-1"
                }
              }
            }
          },
          "serialNumber": {
            "title": "Serial Number",
            "type": "string",
            "required": true,
            "default": "Default-Serial"
          },
          "manufacturer": {
            "title": "Manufacturer",
            "type": "string",
            "required": true,
            "default": "Default-Manufacturer"
          },
          "model": {
            "title": "Model",
            "type": "string",
            "required": true,
            "default": "Default-Model"
          }
        }
      }
    }
  }
}